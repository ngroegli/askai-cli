[bandit]
# Bandit configuration file for AskAI CLI
# Skip low-severity issues that are acceptable for this codebase

# Skip specific test patterns
skips = B110,B112
# B110: Try, Except, Pass - acceptable in UI components for graceful fallback
# B112: Try, Except, Continue - acceptable for non-critical processing

# Only fail on high severity issues
severity = medium,high

# Exclude test directories 
exclude_dirs = tests/

# Include only specific directories
include = src/